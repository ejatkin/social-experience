extends layout


block content
  h1= title
  p Stuff that can't be found in travel guides nor Wikipedia
  br
  br
  form#story(name="submit-story", method="post", action="/stories") Share your story
    div.input
      span.label Country
      input#country(type="text", name="country")
    div.input
      span.label City
      input#city(type="text", name="city")
    div.input
      span.label Category
      select#category
        option(value="communication") Communications styles and rules
        option(value="socialroles") Social roles
        option(value="courtship") Courtship
    div.input
      span.label Perspective
      select#perspective
        option(value="insider") Insider
        option(value="outsider") Outsider
    div.input
      span.label Title
      input#title(type="text", name="title")
    div.input
      span.label Your Experience
      textarea(name="Experience", cols="40", rows="5")

    div.actions
      input#submit(type="submit", value="Submit")
